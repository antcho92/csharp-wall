@model theWall.Models.Comment
<form asp-controller="comment" asp-action="comment" method='POST'>
    <label asp-for="content">Post a Comment!</label>
    <br>
    <textarea asp-for="content" cols="40" rows="5"></textarea>
    <br>
    <input type="hidden" asp-for="message_id" value="@ViewData["MessageId"]">
    <input type="submit" value="Comment">
</form>